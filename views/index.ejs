<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Posts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 class="title">ðŸ“– My Blog</h1>
        <p class="subtitle">Sharing ideas, one post at a time.</p>

        <a href="/add-post" class="add-post-btn">+ Add New Post</a>

        <div class="posts-list">
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <h2><a href="/post?id=<%= post.id %>"><%= post.title %></a></h2>
                        <p class="excerpt"><%= post.content.substring(0, 100) %>...</p>
                        <a href="/post?id=<%= post.id %>" class="read-more">Read More â†’</a>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="no-posts">No blog posts yet. <a href="/add-post">Create one</a>!</p>
            <% } %>
        </div>
    </div>
</body>
</html>